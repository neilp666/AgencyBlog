<header class="intro-header header2" >
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <div class="post-heading">
                        <h1><%= @post.title %></h1>
                        <span class="meta"><p><%= link_to "edit", edit_post_path(@post) %> |

  <%= link_to "Delete", post_path(@post), method: :delete, data: {confirm: "Are you sure you want to delete this post"} %></p></span>
                    </div>
                </div>
            </div>
        </div>
    </header>




    <article>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <p>
                       <%= @post.body %>
                    </p>
                </div>
            </div>
        </div>
      </article>
                    

    <h2> All Comments:</h2>

    <%= render @post.comments.all.order("created_at DESC") %>



  <h1> Leave a Comment </h1>

  <%= form_for [@post, @post.comments.build] do |f| %>
    <%= f.label :name %><br>
    <%= f.text_field :name %><br>


    <%= f.label :body %><br>
    <%= f.text_area :body %><br>

    <%= f.submit %>

  <% end %>

  <h1> <%= link_to "back", posts_path %> </h1>


